<% layout("/layouts/boilerplate") %>

<body>
    <form action="/listings" method = "POST">
        <div class = "edit-form">
            <h3>Create new stay</h3>
            <div class = "form">
                <div><label for="title">Title</label></div>
                <input id = "title" type="text" name = "listing[title]" placeholder = "Enter title"><br><br>
            </div>

            <div class = "form">
                <div><label for="description">Description</label></div>
                <textarea id = "description" name="listing[Description]" placeholder="Enter description"></textarea><br><br>
            </div>
           
            <div class = "form">
                <div><label for="image">Image URL</label></div>
                <input id = "image" type="text" name = "listing[image]" placeholder = "Enter image url"><br><br>    
            </div>
            

            <div class = "form">
                <div><label for="price">Price</label></div>
                <input id = "price" type="number" name = "listing[price]" placeholder="Enter price"><br><br>    
            </div>
            
            <div class = "form">
                <div><label for="location">Location</label></div>
                <input id = "location" type="text" name = "listing[location]" placeholder = "Enter location"><br><br>
            </div>
            
            <div class = "form">
                <div><label for="country">Country</label></div>
                <input id = "country" type="text" name = "listing[country]" placeholder = "Enter country name"><br><br>
            </div>
            
        </div>
        <button type="submit" class="btn btn-success">Create</button>

    </form>
</body>
