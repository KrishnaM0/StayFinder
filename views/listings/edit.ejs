<% layout("/layouts/boilerplate") %>

<body>
    <div class = "container">
        <form  method = "POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate>
            <div class = "edit-form">
                <h3 class = "edit-form-header">Edit details</h3>
    
                <div class = "form">
                    <div><label for="title" class="form-label">Title</label></div>
                    <input class="form-control" id = "title" type="text" name = "listing[title]" value = "<%=listing.title%>" placeholder = "Enter title" required><br><br>
                    <p class="valid-feedback">Looks good!</p>
                    <p class="invalid-feedback">Title should be valid!</p>
                </div>
    
                <div class = "form">
                    <div><label for="description" class="form-label">Description</label></div>
                    <textarea class="form-control" id = "description" name="listing[Description]" placeholder="Enter description" rows="2" cols="70" required><%=listing.Description%></textarea><br><br>
                    <p class="invalid-feedback">Please provide short description!</p>
                </div>
    
                <div class = "form">
                    <div><label for="image" class="form-label">Image URL</label></div>
                    <input class="form-control" id = "image" type="text" name = "listing[image]" placeholder = "Enter image url" value = "<%=listing.image%>" required><br><br>
                    <p class="invalid-feedback">Image should be valid!</p>
                </div>
             
                <div class = "form">
                    <div><label for="price" class="form-label">Price</label></div>
                    <input class="form-control" id = "price" type="number" name = "listing[price]" placeholder="Enter price" value = "<%=listing.price%>" required><br><br>    
                    <p class="invalid-feedback">Price should be valid!</p>
                </div>
               
                <div class = "form">
                    <div><label for="location" class="form-label">Location</label></div>
                    <input class="form-control" id = "location"type="text" name = "listing[location]" placeholder = "Enter location" value = "<%=listing.location%>" required><br><br>
                    <p class="invalid-feedback">Location should be valid!</p>
                </div>
                
                <div class = "form">
                    <div><label for="country" class="form-label">Country</label></div>
                    <input class="form-control" id = "country" type="text" name = "listing[country]" placeholder = "Enter country name" value = "<%=listing.country%>" required><br><br>    
                    <p class="invalid-feedback">Country name should be valid!</p>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
    
        </form>
    </div>
    
</body>
